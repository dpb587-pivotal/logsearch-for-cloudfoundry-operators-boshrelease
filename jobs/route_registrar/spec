---
name: route_registrar

description: "Used for registering routes"

templates:
  route_registrar_ctl.erb: bin/route_registrar_ctl
  registrar_settings.yml.erb: config/registrar_settings.yml
  helpers/utils.sh: helpers/utils.sh

packages:
- route_registrar

properties:
  cf.system_domain:
    description: CF system domain
  route_registrar.routes:
    description: Routes to registrar
  route_registrar.update_frequency_in_seconds:
    default: 20
    description: The delay in seconds between routing updates
  cf.nats.host:
    description: Hostname/IP of NATS
  cf.nats.port:
    description: Port that NATS listens on
  cf.nats.username:
    description: The user to use when authenticating with NATS
  cf.nats.password:
    description: The password to use when authenticating with NATS
