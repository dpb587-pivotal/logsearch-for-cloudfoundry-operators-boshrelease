<%
  def discover_external_ip
    networks = spec.networks.marshal_dump
    _, network = networks.find do |_name, network_spec|
      network_spec.default
    end
    if !network
      _, network = networks.first
    end
    if !network
      raise "Could not determine IP via network spec: #{networks}"
    end
    network.ip
  end
%>
---
<% if properties.cf.system_domain %>
message_bus_servers:
  - host: <%= p('cf.nats.host') %>:<%= p('cf.nats.port') %>
    user: <%= p('cf.nats.username') %>
    password: <%= p('cf.nats.password') %>

routes:
<% p("route_registrar.routes").each do |route_config| %>
  - name: <%= route_config['name'] %>
    port: <%= route_config['port'] %>
    registration_interval: <%= route_config['registration_interval'] %>
    uris:
    - logsearch.<%= p('cf.system_domain') %>

    <% if route_config['tags'] %>
    tags:
      <% route_config['tags'].each do |key, value| %>
      <%= key %>: <%= value %>
      <% end %>
    <% end %>

    <% if route_config['health_check'] %>
    <% health_check = route_config['health_check'] %>
    health_check:
      name: <%= health_check['name'] %>
      script_path: <%= health_check['script_path'] %>
      <% if health_check['timeout'] %>
      timeout: <%= health_check['timeout'] %>
      <% end %>
    <% end %>

<% end %>

host: <%= discover_external_ip %>
<% end %>
